{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<article class="{{post_class}} hentry">
{{#post}} {{! Everything inside the #post tags pulls data from the post }}
<div class="entry-meta">
    <div class="meta-date">{{date format="DD MMM YYYY"}}</div>
    <div>{{tags prefix="on "}}</div>
</div>

<div class="content-wrapper">
    <header class="entry-header">
        <h1 class="entry-title">{{{title}}}</h1>
    </header><!-- .entry-header -->

    <div class="entry-content">
        {{content}}
    </div>
</div><!-- .content-wrapper -->

<footer class="entry-footer post-footer">

    <section class="author">
        <h4>{{primary_author.name}}</h4>
        <p>{{primary_author.bio}}</p>
        <ul class="author-meta clearfix">
            {{#if primary_author.location}}<li>{{primary_author.location}}</li>{{/if}}
            {{#if primary_author.website}}<li><a href="{{primary_author.website}}">{{primary_author.name}}</a></li>{{/if}}
        </ul>
    </section>

    <section class="share">
        <h4>Share</h4>
        <a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <span class="hidden">Twitter</span>
        </a>
        <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <span class="hidden">Facebook</span>
        </a>
    </section>

</footer>

{{/post}}
</article>
